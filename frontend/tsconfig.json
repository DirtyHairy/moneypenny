{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "lib": [
      "es6",
      "dom"
    ],
    "jsx": "react",
    "sourceMap": true,
    "importHelpers": true,
    "strict": true,
    "noUnusedParameters": false,
    "noUnusedLocals": true,
    "strictNullChecks": false,
    "moduleResolution": "node",
    "outDir": "compiled",

    "plugins": [
      { "name": "tslint-language-service"}
    ]

  },
  "include": [
    "src/**/*.tsx",
    "src/**/*.ts"
  ]
}
